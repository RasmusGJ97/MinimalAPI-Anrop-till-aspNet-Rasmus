@model BookDTO


<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title"><strong>@Html.DisplayFor(Model => Model.Title)</strong></h5>
            <h6 class="card-subtitle mb-2 text-muted">By @Html.DisplayFor(Model => Model.Author)</h6>
            <p class="card-text"><strong>Published: </strong> @Html.DisplayFor(Model => Model.Publiced)</p>
            <p class="card-text"><strong>Genre: </strong> @Html.DisplayFor(Model => Model.Genre)</p>
            <p class="card-text"> <strong>Description: </strong> <br />@Html.DisplayFor(Model => Model.Description)</p>
            <div class="d-flex align-items-center">
                @if(Model.Available == true)
                {
                    <p class="card-text text-success small d-flex align-items-center mb-0">
                        <i class="bi bi-check-circle-fill me-1"></i><strong>Available</strong>
                    </p>
                }
                else
                {
                    <p class="card-text text-danger small d-flex align-items-center mb-0">
                        <i class="bi bi-x-circle-fill me-1"></i><strong>Not Available</strong>
                    </p>
                }
            </div>
        </div>
    </div>
    <div class="mt-3 ms-3 d-flex justify-content-left align-items-center">
        <a asp-action="UpdateBook" asp-route-id="@Model.ID" class="btn btn-primary btn-sm">
            Edit
        </a>
        <a asp-action="DeleteBook" asp-route-id="@Model.ID" class="btn btn-danger btn-sm ms-3">
            Delete
        </a>
    </div>
</div>
